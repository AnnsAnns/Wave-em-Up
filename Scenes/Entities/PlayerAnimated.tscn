script/source = "extends Node2D

export (int) var speed = 400

var velocity = Vector2()
var mouse_position
var player_position
onready var sprite = $KinematicBody2D/Player_Sprite

func get_input():
	velocity = Vector2()
	#$KinematicBody2D.look_at(get_global_mouse_position())
	$KinematicBody2D/AimPivot.look_at(get_global_mouse_position())
	
	if Input.is_action_pressed('right'):
		velocity.x += 1
	if Input.is_action_pressed('left'):
		velocity.x -= 1
	if Input.is_action_pressed('down'):
		velocity.y += 1
	if Input.is_action_pressed('up'):
		velocity.y -= 1
	velocity = velocity.normalized() * speed

func animate_body():
	#Flip sprite
	var p = mouse_position.x - player_position.x
	if p > 0:
		sprite.flip_h = false
		$KinematicBody2D/AimPivot/Arms.position.y = 4
		$KinematicBody2D/AimPivot/Arms.flip_v = false
		$KinematicBody2D/AimPivot.position.y = 2
	else:
		sprite.flip_h = true
		$KinematicBody2D/AimPivot/Arms.position.y = -4
		$KinematicBody2D/AimPivot/Arms.flip_v = true
		$KinematicBody2D/AimPivot.position.y = -2
	
	#Animate sprite
	match sprite.flip_h:
		false:
			if velocity.x < 0:	sprite.play(\"Backward\", false)
			elif velocity == Vector2.ZERO:	sprite.play(\"Idle\", false)
			else:	sprite.play(\"Forward\", false)
		
		true:
			if velocity.x > 0:	sprite.play(\"Backward\", false)
			elif velocity == Vector2.ZERO:	sprite.play(\"Idle\", false)
			else:	sprite.play(\"Forward\", false)

func _physics_process(delta):
	get_input()
	velocity = $KinematicBody2D.move_and_slide(velocity)
	get_function_based_on_position()
	animate_body()

func get_function_based_on_position():
	mouse_position = get_global_mouse_position()
	player_position = $KinematicBody2D.global_position

func _on_AimPivot_IsNotFiring():
	$KinematicBody2D/AimPivot/Arms.play(\"Normal\",false)

func _on_AimPivot_IsFiring():
	$KinematicBody2D/AimPivot/Arms.play(\"Shoot\",false)
"

